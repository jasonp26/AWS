# Demo Setup.yml

- name: My Demo EC2 for AWS
  hosts: localhost
  connection: local
  gather_facts: False
  vars:
    keypair: id_rsa
    instance_type: t2.micro
    ami_id: ami-cc7066a8
    region: eu-west-2
  tasks:
    - name: Create an Instance on AWS
      ec2:
         key_name: "{{ keypair }}"
         group: default
         instance_type: "{{ instance_type  }}"
         image: "{{ ami_id }}"
         wait: true
         region: "{{ region }}"
         aws_access_key: []
         aws_secret_key: []
         exact_count: 2
         count_tag:
             name: aws-demo
         instance_tags:
             name: aws-demo
      register: ec2
    - name: Install the package "tomcat8"
      apt: name=tomcat8 state=latest
    - name: Print all EC2 Variables
      debug: var=ec2
